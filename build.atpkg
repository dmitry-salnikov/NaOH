(package
  :name "NaOH"

  :overlays {
    :link {
      :link-options ["-Xlinker" "user/libsodium/libsodium/src/libsodium/.libs/libsodium.a"]
    }
  }

  :import-packages ["AnarchyDispatch/build.atpkg"]
  
  :tasks {
    :libsodium {
      :tool "shell"
      :script "./libsodium/build.sh"
    }

    :default {
      :tool "atllbuild"
      :sources ["NaOH/**.swift"]
      :name "NaOH"
      :output-type "static-library"
      :dependencies ["libsodium" "AnarchyDispatch.default"]
      :umbrella-header "NaOH/NaOH-atbuild.h"
      :module-map "synthesized"
      :compile-options ["-enable-testing"]
      :include-with-user ["libsodium/libsodium/src/libsodium/include/"]
      :overlays {
        :osx {
          :use-overlays ["AnarchyDispatch.compile-osx"]
        }
        :linux {
          :use-overlays ["AnarchyDispatch.compile-linux"]
        }
      }
      :require-overlays [["osx" "linux"]]
    }

    :build-tests {
      :tool "atllbuild"
      :sources ["NaOHTests/**.swift"]
      :name "NaOHTests"
      :output-type "executable"
      :dependencies ["default"]
      :xctestify true
      :xctest-strict true
      :compile-options ["-I" "libsodium/"]
      :link-with ["NaOH.a"]
      :use-overlays ["link"]
      :link-options ["-Xlinker" "-ObjC"]

      :overlays {
        :osx {
          :use-overlays ["AnarchyDispatch.compile-osx"]
        }
        :linux {
          :use-overlays ["AnarchyDispatch.compile-linux"]
        }
      }
    }

    :check {
      :tool "xctestrun"
      :test-executable ".atllbuild/products/NaOHTests"
      :dependencies ["build-tests"]
    }

    :clean {
      :tool "shell"
      :script "rm -rf user/libsodium && rm -rf libsodium/libsodium"
      :dependencies ["AnarchyDispatch.clean"]
    }
  }
)
